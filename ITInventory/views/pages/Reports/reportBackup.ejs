<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../../partials/head'); %>
  </head>
  <body class="container">
    <header><%- include('../../partials/header'); %></header>
    <div class="container mt-4">
      <div class="container mt-4">
        <h1>Generate Report</h1>
        <form action="/generate-report" method="POST">
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="startDate">Start Date:</label>
              <input type="date" class="form-control" id="startDate" name="startDate" required />
            </div>
            <div class="form-group col-md-6">
              <label for="endDate">End Date:</label>
              <input type="date" class="form-control" id="endDate" name="endDate" required />
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="reportType">Report Type:</label>
              <select class="form-control" id="reportCategory" name="reportCategory" required>
                <option value="">Select a report type</option>
                <option value="backups">Backup</option>
                <option value="assetOutwards">Asset Outward</option>
                <option value="assetInwards">Asset Inward</option>
                <!-- Add more report types as needed -->
              </select>
            </div>
            <div class="form-group col-md-6">
              <label for="reportType">Report Type:</label>
              <select class="form-control" id="reportFormat" name="reportFormat" required>
                <option value="">Select a report type</option>
                <option value="pdf">PDF</option>
                <option value="excel">Excel</option>
                <!-- Add more report types as needed -->
              </select>
            </div>
          </div>

          <button type="submit" class="btn btn-primary">Generate</button>
        </form>
      </div>
    </div>
    <footer><%- include('../../partials/footer'); %></footer>
  </body>
</html>
